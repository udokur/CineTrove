<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewMovie"
        android:layout_width="113dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="149dp"
        android:layout_height="33dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewMovie"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/imageViewMovie"
        app:layout_constraintTop_toBottomOf="@+id/textViewVote"
        app:layout_constraintVertical_bias="0.71000004"
        tools:text="Sample Movie" />

    <ImageView
        android:id="@+id/imageViewVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewVote"
        app:layout_constraintEnd_toStartOf="@+id/textViewVote"
        app:layout_constraintTop_toTopOf="@+id/textViewVote"
        app:srcCompat="@drawable/ic_star" />

    <TextView
        android:id="@+id/textViewVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewMovie"
        app:layout_constraintStart_toStartOf="@+id/imageViewMovie"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMovie"
        tools:text="8.0" />




</androidx.constraintlayout.widget.ConstraintLayout>